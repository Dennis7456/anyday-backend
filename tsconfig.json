{
  "compilerOptions": {
    "outDir": "./dist",          // Output folder for compiled JavaScript files
    "rootDir": "./",           // Specifies where TypeScript should look for source files
    "target": "ES6",              // JavaScript version to compile to (ES6 or higher recommended)
    "module": "commonjs",         // Module system to use (commonjs for Node.js)
    "moduleResolution": "node",   // Resolve modules using Node.js conventions
    "esModuleInterop": true,      // Enables interoperability with ES6 modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,               // Enable all strict type-checking options
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "fastify", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ],             
  "exclude": ["node_modules"]     // Exclude the node_modules folder
}
